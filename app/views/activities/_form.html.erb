<%= stylesheet_link_tag "loginFeatures"%> <!--imported for the purpose of partial, has to be removed while code optimization -->
<%= stylesheet_link_tag "feedback"%>

<%= form_with(model: activity) do |form| %>
  <% if activity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(activity.errors.count, "error") %> prohibited this activity from being saved:</h2>

      <ul>
        <% activity.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="input-group mb-3">
      <%= form.label :title, class:"input-group-text" %>
      <%= form.text_field :title, class:"form-control" %>
    </div>

    <div class="input-group mb-3">
      <%= form.label :activity_type, class:"input-group-text",class: "input-group-text mr-3" %>
      <%= form.select :activity_type, ["Workshop","Training","Installation"],{:include_blank => 'Select activity type'}, class:"form-select"%>
      <div class="mx-3"></div>
      <%= form.label :no_of_attendees, class:"input-group-text" %>
      <%= form.number_field :no_of_attendees, class:"form-select" %>
    </div>

    <div class="input-group mb-3">
        <%= form.label :start_date, class:"input-group-text" ,class: "input-group-text mr-3" %>
        <%= form.date_select :start_date, class:"form-control" %>
        <div class="mx-3"></div>
        <%= form.label :end_date, class:"input-group-text" %>
        <%= form.date_select :end_date %>
    </div>

    <div class="input-group mb-3">
      <%= form.label :name_and_guide, class:"input-group-text" %>
      <%= form.text_area :name_and_guide, class:"form-control", id:"tell-us-more", placeholder:"Name of attendee along with guide name in bracket" %>
    </div>

    <div class="actions">
      <%= form.submit "Submit", class:"btn btn-info" %>
      <%= link_to 'Back', activities_path , class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>
