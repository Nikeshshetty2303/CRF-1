<%= stylesheet_link_tag "announcement"%>
<%= stylesheet_link_tag "loginFeatures"%>   <!-- this has to be removed during code optimization-->
<%= stylesheet_link_tag "adminportal"%>   <!-- this has to be removed during code optimization-->


<p id="notice"><%= notice %></p>

<div id="header">
    <nav class="navbar bg-dark navbar-expand-lg navbar-dark">
        <a class="navbar-brand" id="title" href="#content">Announcement Admin</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#btn-head">
        <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="btn-head">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item" id="admin-mail">
                    <a class="nav-link" href="#">admin@mail</a>
                </li>
                <li class="nav-item" id="logout">
                <%= link_to 'LogOut',destroy_user_session_path,method: :delete ,class:"btn btn-danger"%>
                </li>
            </ul>
        </div>
    </nav>
</div>
<div id="container">
  
 


  <table class="table">
  <thead id="thead">
    <tr>
      <th scope="col">ID</th>
          <th scope="col">Heading</th>
          <th scope="col">Text</th>
          <th scope="col">Created on</th>
          <th scope="col">View</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <tbody>
      <% @announcements.each do |announcement| %>
        <tr>
          <td><%= announcement.id %></td>
          <td><%= announcement.heading %></td>
          <td><%= announcement.text %></td>
          <td><%= announcement.created_on %></td>
          <td><%= link_to 'Show', announcement, class:"btn btn-primary" %>
            
            </td>
          <td><%= link_to 'Edit', edit_announcement_path(announcement), class:"btn btn-success" %>
                
          
            </td>
          <td><%= link_to 'Destroy', announcement, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
           
          </td>
        </tr>
      <% end %>
    </tbody>
  </tbody>
</table>
  
  
</div>
  <%= link_to 'New Announcement', new_announcement_path, id:"new"%>
