<%= stylesheet_link_tag "announcement"%>
<%= stylesheet_link_tag "loginFeatures"%>   <!-- this has to be removed during code optimization-->
<%= stylesheet_link_tag "adminportal"%>   <!-- this has to be removed during code optimization-->


<p id="notice"><%= notice %></p>



<%=render "partials/announceNav"%>

<div id="container">
  
 


  <table class="table">
  <thead id="thead">
    <tr>
      <th scope="col">ID</th>
          <th scope="col">Heading</th>
          <th scope="col">Text</th>
          <th scope="col">Created on</th>
          <th scope="col">View</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <tbody>
      <% @announcements.each do |announcement| %>
        <tr>
          <td><%= announcement.id %></td>
          <td><%= announcement.heading %></td>
          <td><%= announcement.text %></td>
          <td><%= announcement.created_on %></td>
          <td><%= link_to 'Show', announcement, class:"btn btn-primary" %>
            <!-- Button trigger modal -->
              <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Show modal
              </button>

              <!--  Scrolable Modal -->
              <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-scrollable">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h1 class="modal-title fs-5" id="exampleModalLabel"><%= announcement.heading %></h1>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      <%= announcement.text %>
                    </div>
                    <div class="modal-footer">
                    </div>
                  </div>
                </div>
              </div>
            </td>
          <td><%= link_to 'Edit', edit_announcement_path(announcement), class:"btn btn-success" %>
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#edit">
                  Launch demo modal
                </button>

                <!-- Modal -->
                <div class="modal fade" id="edit" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="modal-body">
                        ...
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                      </div>
                    </div>
                  </div>
                </div>
          
            </td>
          <td><%= link_to 'Destroy', announcement, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
           
          </td>
        </tr>
      <% end %>
    </tbody>
  </tbody>
</table>
  
  
</div>
  <%= link_to 'New Announcement', new_announcement_path, id:"new"%>
