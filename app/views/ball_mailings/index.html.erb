<p id="notice"><%= notice %></p>

<h1>Ball Mailings</h1>

<table>
  <thead>
    <tr>
      <th>Sample</th>
      <th>Feed</th>
      <th>Btype</th>
      <th>Grind</th>
      <th>Specify</th>
      <th>Size</th>
      <th>Grinding</th>
      <th>Speed</th>
      <th>Hardness</th>
      <th>Toxicity</th>
      <th>Compatibility</th>
      <th>More</th>
      <th>Status</th>
      <th>Slotdate</th>
      <th>Slottime</th>
      <th>Debit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ball_mailings.each do |ball_mailing| %>
      <tr>
        <td><%= ball_mailing.sample %></td>
        <td><%= ball_mailing.feed %></td>
        <td><%= ball_mailing.btype %></td>
        <td><%= ball_mailing.grind %></td>
        <td><%= ball_mailing.specify %></td>
        <td><%= ball_mailing.size %></td>
        <td><%= ball_mailing.grinding %></td>
        <td><%= ball_mailing.speed %></td>
        <td><%= ball_mailing.hardness %></td>
        <td><%= ball_mailing.toxicity %></td>
        <td><%= ball_mailing.compatibility %></td>
        <td><%= ball_mailing.more %></td>
        <td><%= ball_mailing.status %></td>
        <td><%= ball_mailing.slotdate %></td>
        <td><%= ball_mailing.slottime %></td>
        <td><%= ball_mailing.debit %></td>
        <td><%= link_to 'Show', ball_mailing %></td>
        <td><%= link_to 'Edit', edit_ball_mailing_path(ball_mailing) %></td>
        <td><%= link_to 'Destroy', ball_mailing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

