    margin: auto;
    border-radius: 15px;
  }

  #sbt {
    width: 100%;
    background-color: #0d6efd;
  }

  h2 {
    text-align: center;
  }

  #about {}













  .f-container {
    display: flex;
    background-color: #343A40;
    justify-content: space-around;
    color: white;
  }

  .f-container:hover {
    transform: rotateY(360deg);
  }

  .left-child {
    border: 0px;
    padding-left: 1%;
    width: 33%;
  }

  .middle-child {
    display: flex;
    align-items: center;
    width: 33%;
    justify-content: center;
    border: 0px;
  }

  .right-child {
    display: flex;
    flex-direction: column;
    width: 33%;
    align-items: end;
    padding-right: 2%;
  }

  .icons ul {
    display: flex;
    margin: 0;
    padding: 0;
    scale: 1.5;
  }

  .icons ul li {
    list-style: none;
  }

  .icons ul li a {
    display: block;
    position: relative;
    width: 25px;
    height: 25px;
    background-color: #fff;
    text-align: center;
    line-height: 20px;
    font-size: 15px;
    margin: 0 0 0 20px;
    border-radius: 50%;
    overflow: hidden;
    z-index: 1;
    border: 3px solid #fff;
  }

  .icons ul li a .icon {
    position: relative;
    color: #262626;
    transition: 0.5s;
    z-index: 3;
  }

  .icons ul li a:hover .icon {
    color: #fff;
    transform: rotateY(360deg);
  }

  .icons ul li a:before {
    content: "";
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    height: 100%;
    background: #55acee;
    transition: 0.5s;
    z-index: 2;
  }

  .icons ul li a:hover:before {
    top: 0;
  }

  .icons ul li:nth-child(2) a:before {
    background: black;
  }

  .icons ul li:nth-child(4) a:before {
    background: darkblue;
  }

  .f-heading {
    font-size: 2rem;
  }

  .f-text {
    padding: 4%;
  }

  @media only screen and (max-width: 992px) {
    #heading img {
      display: none;
    }

    #logo {
      display: block;
      margin-left: 5%;
    }

    .coolBeans {
      width: 100%;
    }
  }

  /* this class will get toggles to make questions appear or disappear in form*/
  .vis {
    display: none;
  }
</style>

