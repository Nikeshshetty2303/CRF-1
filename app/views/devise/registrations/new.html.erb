<style>
  *{
    margin: 0%;
    padding: 0%;
  }
  #heading{
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 15px;
  }
  .navlist{
    list-style: none;
    text-decoration: none;
    display: flex;

  }
  .center{
    display: flex;
    justify-content: center;
  }
  .spacing{
    margin: 1rem 4rem;
  }
  .nav-item{
  color: black;
  transition-duration: 0.5;
}
  .coolBeans{
    border-radius: 20px;
    color: rgb(249, 249, 249);
    font-family: roboto;
    font-size: 1rem;
    font-weight: 100;
    overflow: hidden;
    padding: 0.6em 1.5em;
    position: relative;
    text-decoration: none;
    transition: .2s transform ease-in-out;
    will-change: transform;
    z-index: 0;
  }

  .coolBeans::after{
    background-color: black;
    border-radius: 20px;
    content: '';
    display: block;
    height: 100%;
    width: 100%;
    position: absolute;
    left: 0;
    top: 0;
    transform: translate(0, -100%) rotate(-45deg);
    transform-origin: top left;
    transition: .5s transform ease-out;
    will-change: transform;
    z-index: -1;
  }
    
  .coolBeans:hover::after{
    
    transform: translate(0, 0);
  }
    
  .coolBeans:hover{
    color: white;
    will-change: transform;
}
#logo{
  display: none;
}
#togle{
  margin-right:1em;
}
.nav-link:hover{
  color: white;
}

/* white:hover{
  color: red;
} */
#container{
  display: flex;
  margin: auto;
  max-width: 90%;
}
#instruction{
  width: 30%;
  margin: auto 10%;
  background-color: aqua;
}
#login{
  background-color: brown;
  padding: 20px 40px;
  max-width:50% ;
  margin: auto;
}
@media only screen and (max-width: 992px){
  #heading img{
    display: none;
  }
  #logo{   
    display: block;
    margin-left: 5%;
}
}

</style>


<div class="" id="heading">
  <%=image_tag 'logoT.png', height:75 %>
  <h1>Central Research Facility NITK</h1>
</div>

<div id="navigation">
  <nav class="navbar navbar-expand-lg ">
    <div class="container-fluid">
      <a id="logo" class="navbar-brand" href="#"><%=image_tag 'logoT.png', height:75 %></a>
      <button id="togle" class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse center" id="navbarSupportedContent">
        <ul class="navbar-nav ">
          <li class="nav-item coolBeans spacing">
            <a class="nav-link" href="#">Home</a>
          </li>
          <li class="nav-item coolBeans spacing">
            <a class="nav-link" href="#">About</a>
          </li>
          <li class="nav-item coolBeans spacing ">
            <a class="nav-link" href="#">NITK Website</a>
          </li>
          <li class="nav-item coolBeans spacing ">
            <a class="nav-link" href="#">Contact Us</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</div>

<div id="container">
  <div id="instruction" class="card">
    <ul class="list-group list-group-flush">
      <li class="list-group-item">An item</li>
      <li class="list-group-item">A second item</li>
      <li class="list-group-item">A third item</li>
    </ul>
  </div>
  <form id="login" >
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Email address</label>
      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
      <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Password</label>
      <input type="password" class="form-control" id="exampleInputPassword1">
    </div>
    <div class="mb-3 form-check">
      <input type="checkbox" class="form-check-input" id="exampleCheck1">
      <label class="form-check-label" for="exampleCheck1">Check me out</label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>

