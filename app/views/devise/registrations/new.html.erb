<style>
  @import url("https://fonts.googleapis.com/css2?family=Ubuntu:wght@500&display=swap");

  * {
    margin: 0%;
    padding: 0%;
    font-family: "Ubuntu", "sans-serif"
  }

  #heading {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 15px;
    letter-spacing: 15px;
    text-align: center;
  }

  .navlist {
    list-style: none;
    text-decoration: none;
    display: flex;

  }

  .center {
    display: flex;
    justify-content: center;
  }

  .spacing {
    margin: 1rem 4rem;
  }

  .nav-item {
    color: black;
    transition-duration: 0.5;
  }

  .coolBeans {
    border-radius: 20px;
    color: rgb(249, 249, 249);
    font-family: roboto;
    font-size: 1rem;
    font-weight: 100;
    overflow: hidden;
    padding: 0.6em 1.5em;
    position: relative;
    text-decoration: none;
    transition: .2s transform ease-in-out;
    will-change: transform;
    z-index: 0;
  }

  .coolBeans::after {
    background-color: black;
    border-radius: 20px;
    content: '';
    display: block;
    height: 100%;
    width: 100%;
    position: absolute;
    left: 0;
    top: 0;
    transform: translate(0, -100%) rotate(-45deg);
    transform-origin: top left;
    transition: .5s transform ease-out;
    will-change: transform;
    z-index: -1;
  }

  .coolBeans:hover::after {

    transform: translate(0, 0);
  }

  .coolBeans:hover {
    color: white;
    will-change: transform;
  }

  #logo {
    display: none;
  }

  #togle {
    margin-right: 1em;
  }

  .nav-link:hover {
    color: white;
  }

  #container {
    display: flex;
    margin: auto;
    max-width: 100%;
    min-height: 69vh;
  }

  #instruction {
    width: 30%;
    margin: auto 10%;
    background-color: #0d6efd;
  }

  #login {
