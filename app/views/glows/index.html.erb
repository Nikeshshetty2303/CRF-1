<p id="notice"><%= notice %></p>

<h1>Glows</h1>

<table>
  <thead>
    <tr>
      <th>Sample</th>
      <th>Elemental</th>
      <th>Coated</th>
      <th>Coated ele</th>
      <th>Substarte</th>
      <th>Specification</th>
      <th>More</th>
      <th>Status</th>
      <th>Slotdate</th>
      <th>Slottime</th>
      <th>Debit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @glows.each do |glow| %>
      <tr>
        <td><%= glow.sample %></td>
        <td><%= glow.elemental %></td>
        <td><%= glow.coated %></td>
        <td><%= glow.coated_ele %></td>
        <td><%= glow.substarte %></td>
        <td><%= glow.specification %></td>
        <td><%= glow.more %></td>
        <td><%= glow.status %></td>
        <td><%= glow.slotdate %></td>
        <td><%= glow.slottime %></td>
        <td><%= glow.debit %></td>
        <td><%= link_to 'Show', glow %></td>
        <td><%= link_to 'Edit', edit_glow_path(glow) %></td>
        <td><%= link_to 'Destroy', glow, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

