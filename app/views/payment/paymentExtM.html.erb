<%= stylesheet_link_tag "paymentportal" %>

<div id="header">
    <nav class="navbar bg-dark navbar-expand-lg navbar-dark">
        <a class="navbar-brand" id="title" href="#content">CRF ADMIN</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#btn-head">
        <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="btn-head">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item" id="admin-mail">
                    <a class="nav-link" href="#">admin@mail</a>
                </li>
                <li class="nav-item" id="logout">
                <%= link_to 'LogOut',destroy_user_session_path,method: :delete ,class:"btn btn-danger"%>
                </li>
            </ul>
        </div>
    </nav>
</div>

<div class="container-payments">

    <div id="navigation" class="font-quiucksand">
        <!--below is the button of Nitk CRF logo-->
        <div id="navigation-logo">
          <a href="#"> <%=image_tag 'logoT', id:"logopic", class:"btn btn-left" %> </a>
        </div>

        <div class="sidelinks">

            <h2 class="fw-bold text-center">Navigation</h2>
            <ul class="sidelinks-model-list">
                <%# below are code to get items on the navigation pane %>
                 <li class="nav-item">
                 <%= link_to 'All Payments',payment_paymentExt_path,class:"nav-link active sidelink-wrap" %>
                </li>
                <li class="nav-item">
                        <%= link_to 'Recently Completed',payment_paymentExtR_path,class:"nav-link active sidelink-wrap" %>
                </li>
                <li class="nav-item">
                    <%= link_to 'Manual Entry',payment_paymentExtM_path,class:"nav-link active sidelink-wrap", id:"active-tab" %>
                </li>
                <li class="nav-item">
                    <%= link_to 'Completed',payment_paymentExtC_path,class:"nav-link active sidelink-wrap" %>
                </li>
                <li class="nav-item">
                    <%= link_to 'Update',payment_paymentExtU_path,class:"nav-link active sidelink-wrap" %>
                </li>
            </ul>
        </div>
    </div>


    <div id="hero">

        <div id="manual-heading">
            <h1>Manual Entry</h1>
        </div>

        <div id="wrap">
          <%= form_with(model: @equipment,local:true) do |form| %>
            <div class="mb-3">
                <div class="input-group">
                    <label class="input-group-text" id="app-no-label" for="app-no">ApplNo/Ref. No</label>
                    <input type="text" class="form-control" id="app-no" aria-describedby="basic-addon3">
                </div>
            </div>

            <div class="input-group mb-3">
                <label class="input-group-text" for="inputGroupSelect01">Equipment</label>
                <select class="form-select" id="inputGroupSelect01">
                    <option selected>Choose...</option>
                    <option value="1">One</option>
                </select>
            </div>

            <div class="input-group mb-3">
                <label class="input-group-text" for="department">Profession</label>
                <select class="form-select" id="department">
                    <option selected>Choose...</option>
                    <option value="academia">Academia</option>
                    <option value="industry">Industry</option>
                    <option value="enterpreneur">Enterpreneur</option>
                </select>
            </div>

            <div class="input-group mb-3">
                <label class="input-group-text" for="invoice-name">Invoice Name</label>
                <input type="text" class="form-control" id="invoice-name" aria-describedby="basic-addon3">
            </div>

            <div class="input-group mb-3">
                <label class="input-group-text" for="invoice-add">Invoice Address</label>
                <input type="text" class="form-control" id="invoice-add" aria-describedby="basic-addon3">
            </div>
            <div class="input-group mb-3">
                <label class="input-group-text" for="invoice-add">Invoice Address</label>
                <input type="text" class="form-control" id="invoice-add" aria-describedby="basic-addon3">
            </div>
            <div class="input-group mb-3">
                <label class="input-group-text" for="invoice-gst">Invoice GST No</label>
                <input type="text" class="form-control" id="invoice-gst" aria-describedby="basic-addon3">
            </div>
            <div class="input-group mb-3">
                <label class="input-group-text" for="app-gst">GST Apllied</label>
                <select class="form-select" id="app-gst">
                    <option selected>Choose...</option>
                    <option value="18%">18%</option>
                    <option value="16%">16%</option>
                    <option value="0%">0%</option>
                </select>
            </div>


            <hr>



            <div class="input-group mb-3">
                <label class="input-group-text" id="reg-id-label" for="paid">Amount Paid</label>
                <label class="input-group-text" id="reg-id-label" for="paid">â‚¹</label>
                <input type="text" class="form-control" id="paid" aria-describedby="basic-addon3" placeholder="">
            </div>

            <div class="input-group mb-3">
                <label class="input-group-text" id="guide-label" for="testing">Testing</label>
                <input type="text" class="form-control" id="testing" aria-describedby="basic-addon3" placeholder="" readonly>
            </div>
            <div class="input-group mb-3">
                <label class="input-group-text" id="guide-label" for="consultancy">Consultancy</label>
                <input type="text" class="form-control" id="consultancy" aria-describedby="basic-addon3" placeholder="" readonly>
            </div>
            <div class="input-group mb-3">
                <label class="input-group-text" id="guide-label" for="read-gst">GST</label>
                <input type="text" class="form-control" id="read-gst" aria-describedby="basic-addon3" placeholder="" readonly>
            </div>

             <div class="input-group mb-3">
                <label class="input-group-text" for="state">State</label>
                <select class="form-select" id="state">
                    <option selected>Choose...</option>
                </select>
            </div>
             <div class="input-group mb-3">
                <label class="input-group-text" for="district">District</label>
                <select class="form-select" id="district">
                    <option selected>Choose...</option>
                </select>
            </div>

             <div class="input-group mb-3">
                <label class="input-group-text" id="guide-label" for="deposit-date">Date of Deposit</label>
                <input type="date" class="form-control" id="deposit-date" aria-describedby="basic-addon3" placeholder="">
            </div>

            <div class="input-group mb-3">
                <label class="input-group-text" id="guide-label" for="UTR-No">UTR No / CHQ No / DD No:</label>
                <input type="type" class="form-control" id="UTR-No" aria-describedby="basic-addon3" placeholder="">
            </div>



            <div class="actions">
                <button type="submit" class="btn btn-success" id="sbt">Submit</button>
            </div>

        </div>

    </div>



</div>
