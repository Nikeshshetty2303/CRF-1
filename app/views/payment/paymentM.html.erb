<%= stylesheet_link_tag "paymentportal" %>

<div id="header">
    <nav class="navbar bg-dark navbar-expand-lg navbar-dark">
        <a class="navbar-brand" id="title" href="#content">CRF ADMIN</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#btn-head">
        <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="btn-head">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item" id="admin-mail">
                    <a class="nav-link" href="#">admin@mail</a>
                </li>
                <li class="nav-item" id="logout">
                <%= link_to 'LogOut',destroy_user_session_path,method: :delete ,class:"btn btn-danger"%>
                </li>
            </ul>
        </div>
    </nav>
</div>

<div class="container-payments">

    <div id="navigation" class="font-quiucksand">
        <!--below is the button of Nitk CRF logo-->
        <div id="navigation-logo">
          <a href="#"> <%=image_tag 'logoT', id:"logopic", class:"btn btn-left" %> </a>
        </div>

        <div class="sidelinks">

            <h2 class="fw-bold text-center">Navigation</h2>
            <ul class="sidelinks-model-list">
                <%# below are code to get items on the navigation pane %>
                <li class="nav-item">
                 <%= link_to 'All Payments',payment_payment_path,class:"nav-link active sidelink-wrap" %>
                </li>
                <li class="nav-item">
                        <%= link_to 'Department Operating Cost',payment_paymentD_path,class:"nav-link active sidelink-wrap" %>
                </li>
                <li class="nav-item">
                    <%= link_to 'CPDA Fund',payment_paymentC_path,class:"nav-link active sidelink-wrap" %>
                </li>

                <li class="nav-item">
                    <%= link_to 'Student Contingency',payment_paymentS_path,class:"nav-link active sidelink-wrap" %>
                </li>

                <li class="nav-item">
                    <%= link_to 'Project Fund',payment_paymentP_path,class:"nav-link active sidelink-wrap" %>
                </li>

                <li class="nav-item">
                    <%= link_to 'Manual Entry',payment_paymentM_path,class:"nav-link active sidelink-wrap", id:"active-tab" %>
                </li>
                <li class="nav-item">
                    <%= link_to 'Update',payment_paymentU_path,class:"nav-link active sidelink-wrap" %>
                </li>
            </ul>
        </div>
    </div>


    <div id="hero">

        <div id="manual-heading">
            <h1>Manual Entry</h1>
        </div>

        <div id="wrap">
          <%= form_with(model: @equipment,local:true) do |form| %>
            <div class="mb-3">
                <div class="input-group">
                  <%= form.label :app_no, "Apllication No.", class:"input-group-text", id:"app"%>
                  <%= form.text_field :app_no, class:"form-control", id:"app"%>
                </div>
            </div>

            <div class="input-group mb-3">
              div class="input-group mb-3">
                <%= form.label :equipname,"Equipment", class:"input-group-text", for:"sample-no"%>
                <%= form.select(:equipname, [1, 2,3,4,5], {:include_blank => 'Choose...'},{ :class => 'form-select' ,:id => "sample-no"}) %>
                <label class="input-group-text" for="inputGroupSelect01">Equipment</label>
                <select class="form-select" id="inputGroupSelect01">
                    <option selected>Choose...</option>
                    <option value="1">One</option>
                </select>
            </div>

            <div class="input-group mb-3">
                <label class="input-group-text" for="user-name">User Name</label>
                <input type="text" class="form-control" id="user-name" aria-describedby="basic-addon3">
            </div>

            <div class="input-group mb-3">
                <label class="input-group-text" id="reg-id-label" for="reg-id">Reg ID</label>
                <input type="text" class="form-control" id="reg-id" aria-describedby="basic-addon3" placeholder="Optional">
            </div>

            <div class="input-group mb-3">
                <label class="input-group-text" for="department">Department</label>
                <select class="form-select" id="department">
                    <option selected>Choose...</option>
                    <option value="1">One</option>
                </select>
            </div>

            <div class="input-group mb-3">
                <label class="input-group-text" id="guide-label" for="guide">Guide</label>
                <input type="text" class="form-control" id="guide" aria-describedby="basic-addon3" placeholder="Optional">
            </div>


            <div class="input-group mb-3">
                <label class="input-group-text" for="position">Course/Position</label>
                <select class="form-select" id="position">
                    <option selected>Choose...</option>
                    <option value="1">One</option>
                </select>
            </div>

            <div class="mb-3">
                <div class="input-group mb-3">
                    <label class="input-group-text" id="amount-lanbel" for="amount">Amount</label>
                    <label class="input-group-text" for="amount">â‚¹</label>
                    <input type="text" class="form-control" id="amount" aria-describedby="basic-addon3">
                </div>
            </div>

            <div class="actions">
                <button type="submit" class="btn btn-success" id="sbt">Submit</button>
            </div>
            <%end%>

        </div>

    </div>



</div>
