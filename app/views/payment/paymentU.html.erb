<%# the content section is coded here %>
    <div id="hero">
        <div id="manual-heading">
            <h1>Proforma Update</h1>
        </div>

        <hr>

        <div id="wrap" class="mt-3">

            <div class="mb-3">
              <%= form_with url: payment_paymentU_path do |form| %>
              <div class="input-group form-container" style="max-width: 1000px;">
              <%= form.label :entry, "ApplNo/Ref. No", class:"input-group-text", id:"app-no-label", for:"app-no"%>
              <%= form.text_field :entry, class:"form-control", id:"app-no", placeholder:"CRF/XXX/$$$"%>
              <%= form.submit "Check", class:"btn btn-outline-success", id:"app-no" %>
              </div>


                <%end%>

                <% @equipment.where(dummy:'generated', role:'student').each do |equipment|%>
               <% if @entry == equipment.app_no %>
               <%= content_tag :h5, "Alter the amount below:", class: "text-center",style: "color: grey;" %>

               <%= form_with(model:equipment ,local:true) do |form| %>
                 <div class="input-group" style="max-width: 1000px;">
                   <%= form.label :pay, "Amount", class:"input-group-text", for:"amount_up"%>
                   <%= form.text_field :pay, class:"form-control form-sm", id:"amount_up", placeholder:"#{equipment.pay}"%>
                   <%= form.submit "Edit Fund", class:"btn btn-success", id:"amount_up" %>
                 </div>
                 <div class="actions mb-3">

                 </div>
                 <%end%>
               <%end%>
               <%end%>



            </div>




        </div>




    </div>


</div>
