<div id="margin">
    <div class="container-11">
          <div class="logo">
              <%= image_tag wicked_pdf_asset_base64("logoT.png"),style:"height:80px;"%>
          </div>
          <div class="crf-heading text-center">
              <h1 class="fw-bold" style="font-family: 'Montserrat', sans-serif;">Central Research Facility</h1>
              <h3>National Institute of Technology Karnataka, Surathkal </h3>
              <p><i>www.nitk.ac.in</i></p>
          </div>
      </div>

      <!-- equipment name -->
      <div class="equipment">
          <h2 class="text-center" id="equip-heading"><u>@laser Flash Analyser</u></h2>
      </div>

      <span id="app-no-tag">Application No:</span><span class="app-no fw-bold element data">CRF/LFA/<%=@laser.id%></span>
      <div class = "user-info" >
          <div class="left">
              <div class="element">
                  <span>Applicant Name:</span>
                  <span class="fw-bold data"> <%= @user.firstname %> <%= @user.lastname %> </span>
              </div>
              <div class="element">
                  <span>Applicant Email:</span>
                  <span class="fw-bold data"> <%= @user.email %></span>
              </div>
              <div class="element">
                  <span>Department:</span>
                  <span class="fw-bold data"> <%= @user.department %></span>
              </div>
          </div>
          <div class = "right">
                <div class="element">

                    <span>Contact No:</span>
                    <span class="fw-bold data"> <%= @user.contact %></span>
                </div>

            <div class="element">
                <span>Course:</span>
                <span class="fw-bold data"> <%= @user.course %></span>
            </div>

          </div>
      </div>

        <p class="text-center" id="sample-details-heading"><u>Sample Details</u></p>
        <div id="sample-details">
            <div class="left">
                <div id="no-of-sample" class="element">
                    <span>No. of Samples:<span><span class="fw-bold data"><%=@laser.sample%><span>
                </div>
                <div id="sample-type" class="element">
                    <span>Sample Type:<span><span class="fw-bold data"><%=@laser.stype%><span>
                </div>
                <div id="measurement" class="element">
                    <span>No of Temperature Points:<span><span class="fw-bold data"><%=@laser.temp_points%><span>
                </div>
                <div id="compatibilty" class="element">
                    <span>Composition:<span><span class="fw-bold data"><%=@laser.composition%><span>
                </div>

            </div>

            <div class="right">
                <div id="sample-type" class="element">
                    <span>Sample Toxicity:<span><span class="fw-bold data"><%=@laser.toxicity%><span>
                </div>
                <div id="@laser-to-be-used:" class="element">
                    <span>Sample Compatibilty:<span><span class="fw-bold data"><%=@laser.compatibility%><span>
                </div>

            </div>



            </div>

        <div id="testing-req-div">
            <div id="testing-req" class="element">
                <span>Testing Requirement:<span><span class="fw-bold data"><%@laser.more%><span>
            </div>
        </div>


        <div id="signatures-upper">
            <div id="signatures-upper-left-3d-pro" class="element">
                <div>
                    <span>Supervisor Name:</span>
                </div>
                <div>
                    <span class="fw-bold">Dr. Rizwanur Rahman</span>
                </div>
                <div id="debit-head">
                    <span class="text-muted element"><i>Debit Head:<%=@laser.debit%> </i></span>
                </div>

                    <input id="student" type="textfield"/>
                <div>
                    <span>Supervisor Signature</span>
                </div>
            </div>

            <div id="signatures-upper-right-3d-pro" class="element">
                <div id="faculty-incharge">
                    <span>Faculty In-Charge:</span>
                </div>
                    <input id="student" type="textfield"/>
                <div>
                    <span class="fw-bold">Prof K. Narayan Prabhu</span>
                </div>
                <div>
                    <span id="department"><b>(Dept. Of MME, NITK)</b></span>
                </div>
            </div>

        </div>





        <div class="notes ">
            <p class="fw-bold text-center">General Instructions:</p>
            <section class="font-smaller">
                <ul>
                    <li>Samples must be dry, moisture free, free of oil and grease.</li>
                    <li>Compact powder should be used.</li>
                    <li>Sample dia is fixed (<b>1.270 cm</b>) and thickness should be (<b>0.15 cm to 0.5 cm</b>).</li>
                    <li>Melting point of the sample should be known.</li>
                    <li>Bring CD/DVD (pen drive/hard disks are not allowed). </li>
                    <li>Acknowledgment in publication and thesis is compulsory.</li>
                    <li>Copy of Acknowledgment can be mail to <b>office.crf@nitk.edu.in</b> along with publication</li>
                </ul>
               <center> <i>Declaration: I hereby agree to abide by the rules and regulations of the LFA Laboratory</i> </center>
            </section>

            <div class="signatures">
                <div class="student-sign">
                    <input id="student" type="textfield"/>
                    <p>Student signature after experiment</p>
                </div>
                <div class="chairman-sign">
                    <center>Sd/-</center>
                    <i>Chairman CRF</i>
                </div>
            </div>

            <div class="generated-on mt-3">
                <i>Generated on: <%@laser.created_at%></i>
            </div>

        </div>

</div>
