                <div id="no-of-sample" class="element">
                    <span>No. of Samples:<span><span class="fw-bold data"><%= @multi_impact_tester.sample%><span>
                </div>
                <div id="measurement" class="element">
                    <span>Measurement:<span><span class="fw-bold data"><%= @multi_impact_tester.measurement%><span>
                </div>




            </div>

            <div class="right">
                <div id="sample-type" class="element">
                    <span>Sample Type:<span><span class="fw-bold data"><%= @multi_impact_tester.stype%><span>
                </div>
                <div id="laser-to-be-used:" class="element">
                    <span>Specimen Size:<span><span class="fw-bold data"><%= @multi_impact_tester.size%> mm<span>
                </div>

            </div>



            </div>

        <div id="safety-info">
            <div class="left">

                <div id="compatibilty" class="element">
                    <span>Height Range:<span><span class="fw-bold data"><%= @multi_impact_tester.drop_range%> m<span>
                </div>
                <div id="measurement" class="element">
                    <span>Temperature:<span><span class="fw-bold data"><%= @multi_impact_tester.drop_temp%><%= @multi_impact_tester.shpb_temp%>Â°C<span>
                </div>
                <div id="laser-to-be-used:" class="element">
                    <span>Length:<span><span class="fw-bold data"><%= @multi_impact_tester.shpb_lenght%>s mm<span>
                </div>

            </div>

            <div class="right">

                <div id="laser-to-be-used:" class="element">
                    <span>Impact Velocity:<span><span class="fw-bold data"><%= @multi_impact_tester.bullet_velocity%> <%= @multi_impact_tester.drop_velocity%> <%= @multi_impact_tester.bird_velocity%> m/sec<span>
                </div>
                <div id="laser-to-be-used:" class="element">
                    <span>Shape Of Impactor:<span><span class="fw-bold data"><%= @multi_impact_tester.bullet_shape%> <%= @multi_impact_tester.drop_shape%> <%= @multi_impact_tester.bird_shape%>m/sec<span>
                </div>


                </div>


            </div>



        <div id="testing-req-div">
            <div id="testing-req" class="element">
                <span>Testing Requirement:<span><span class="fw-bold data"><%= @multi_impact_tester.more%><span>
            </div>
        </div>


        <div id="signatures-upper">
