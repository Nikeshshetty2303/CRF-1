<div id="margin">
    <div class="container-11">
          <div class="logo">
              <%= image_tag wicked_pdf_asset_base64("logoT.png"),style:"height:80px;"%>
          </div>
          <div class="crf-heading text-center">
              <h1 class="fw-bold" style="font-family: 'Montserrat', sans-serif;">Central Research Facility</h1>
              <h3>National Institute of Technology Karnataka, Surathkal </h3>
              <p><i>www.nitk.ac.in</i></p>
          </div>
      </div>

      <!-- equipment name -->
      <div class="equipment">
          <h2 class="text-center" id="equip-heading"><u>Scratch/Indentation Testing Slot Form</u></h2>
      </div>

      <span id="app-no-tag">Application No:</span><span class="app-no fw-bold element data">CRF/SI/<%= @scratch_indentation.id%></span>
      <div class = "user-info" >
          <div class="left">
              <div class="element">
                  <span>Applicant Name:</span>
                  <span class="fw-bold data"> <%=@user.name %> <%= @user.lastname %> </span>
              </div>
              <div class="element">
                  <span>Applicant Email:</span>
                  <span class="fw-bold data"> <%=@user.email %></span>
              </div>
              <div class="element">
                  <span>Department:</span>
                  <span class="fw-bold data"> <%=@user.department %></span>
              </div>
          </div>
          <div class = "right">
                <div class="element">

                    <span>Contact No:</span>
                    <span class="fw-bold data"> <%=@user.contact%></span>
                </div>

            <div class="element">
                <span>Course:</span>
                <span class="fw-bold data"> <%=@user.course%></span>
            </div>

          </div>
      </div>


        <p class="text-center" id="sample-details-heading"><u>Sample Details</u></p>
        <div id="sample-details">
            <div class="left">
                <div id="no-of-sample" class="element">
                    <span>No. of Samples:<span><span class="fw-bold data"><%= @scratch_indentation.sample%><span>
                </div>

                <div id="measurement" class="element">
                    <span>Measurement:<span><span class="fw-bold data"><%= @scratch_indentation.measurement%><span>
                </div>
                <div id="compatibilty" class="element">
                    <span>Stroke length:<span><span class="fw-bold data"><%= @scratch_indentation.stroke%> mm<span>
                </div>

            </div>

            <div class="right">
                <div id="sample-type" class="element">
                    <span>No of scratch/indentation on each sample:<span><span class="fw-bold data"><%= @scratch_indentation.number_indentation%><span>
                </div>
                <div id="laser-to-be-used:" class="element">
                    <span>Wear Temperature:<span><span class="fw-bold data"><%= @scratch_indentation.temperature%> Â°C<span>
                </div>
                <div id="laser-to-be-used:" class="element">
                    <span>Sample type:<span><span class="fw-bold data"><%= @scratch_indentation.stype%><span>
                </div>

            </div>



            </div>

        <p class="text-center" id="sample-details-heading"><u>Loading Information</u></p>
        <div id="safety-info">
            <div class="left">
                <div id="measurement" class="element">
                    <span>Constant Load (in N):<span><span class="fw-bold data"><%= @scratch_indentation.constant_load%> N<span>
                </div>
                <div id="compatibilty" class="element">
                    <span>Incremental Load (in N):<span><span class="fw-bold data"><%= @scratch_indentation.increment_load%> N<span>
                </div>

            </div>

            <div class="right">

                <div id="laser-to-be-used:" class="element">
                    <span>Progressive Load (in N):<span><span class="fw-bold data"><%= @scratch_indentation.progressive_load%> N<span>
                </div>


                </div>


            </div>



        <div id="testing-req-div">
            <div id="testing-req" class="element">
                <span>Testing Requirement:<span><span class="fw-bold data"><%= @scratch_indentation.more%><span>
            </div>
            <div id="laser-to-be-used:" class="element">
                    <span>Type Of analysis :<span><span class="fw-bold data"><%= @scratch_indentation.analysis%><span>
                </div>
        </div>


        <div id="signatures-upper">
            <div id="signatures-upper-left-3d-pro" class="element">
                <div>
                    <span>Supervisor Name:</span>
                </div>
                <div>
                    <span class="fw-bold">Dr. Rizwanur Rahman</span>
                </div>
                <div id="debit-head">
                    <span class="text-muted element"><i>Debit Head: <%= @scratch_indentation.debit%></i></span>
                </div>

                    <input id="student" type="textfield"/>
                <div>
                    <span>Supervisor Signature</span>
                </div>
            </div>

            <div id="signatures-upper-right-3d-pro" class="element">
                <div id="faculty-incharge">
                    <span>Faculty In-Charge:</span>
                </div>
                    <input id="student" type="textfield"/>
                <div>
                    <span class="fw-bold">Dr. Ravishankar K.S</span>
                </div>
                <div>
                    <span id="department"><b>(Dept. Of MME, NITK)</b></span>
                </div>
            </div>

        </div>





