<div id="margin">
    <div class="container-11">
          <div class="logo">
              <%= image_tag wicked_pdf_asset_base64("logoT.png"),style:"height:80px;"%>
          </div>
          <div class="crf-heading text-center">
              <h1 class="fw-bold" style="font-family: 'Montserrat', sans-serif;">Central Research Facility</h1>
              <h3>National Institute of Technology Karnataka, Surathkal </h3>
              <p><i>www.nitk.ac.in</i></p>
          </div>
      </div>

      <!-- equipment name -->
      <div class="equipment">
          <h2 class="text-center" id="equip-heading"><u>Spark OES</u></h2>
      </div>

      <span id="app-no-tag">Application No:</span><span class="app-no fw-bold element data">CRF/OES/<%@spark_o.id%></span>
      <div class = "user-info" >
          <div class="left">
            <div class="element">
                <span>Applicant Name:</span>
                <span class="fw-bold data"> <%= @user.name %> <%= @user.lastname %> </span>
            </div>
            <div class="element">
                <span>Applicant Email:</span>
                <span class="fw-bold data"> <%= @user.email %></span>
            </div>
            <div class="element">
                <span>Department:</span>
                <span class="fw-bold data"> <%= @user.department %></span>
            </div>
          </div>
          <div class = "right">
                <div class="element">

                    <span>Contact No:</span>
                    <span class="fw-bold data"> <%= @user.contact %></span>
                </div>

            <div class="element">
                <span>Course:</span>
                <span class="fw-bold data"> <%= @user.course %></span>
            </div>

          </div>
      </div>

        <p class="text-center" id="sample-details-heading"><u>Sample Details</u></h3>
        <div id="sample-details">
            <div class="left">
                <div id="no-of-sample" class="element">
                    <span>No. of Samples:<span><span class="fw-bold data"><%@spark_o.sample%><span>
                </div>


            </div>

            <div class="right">
                <div id="sample-type" class="element">
                    <span>Sample Composition:<span><span class="fw-bold data"><%@spark_o.composition%><span>
                </div>


            </div>



        </div>

        <p class="text-center" id="sample-details-heading"><u>Base Material & No. of sample of each base type</u></h3>
        <div id="safety-info">
            <div class="left">
                <div id="measurement" class="element">
                    <span>Fe:<span><span class="fw-bold data"><%@spark_o.samplefe%><span>
                </div>
                <div id="measurement" class="element">
                    <span>Co:<span><span class="fw-bold data"><%@spark_o.sampleco%><span>
                </div>
                <div id="measurement" class="element">
                    <span>Ni:<span><span class="fw-bold data"><%@spark_o.sampleni%><span>
                </div>
                <div id="measurement" class="element">
                    <span>Zn:<span><span class="fw-bold data"><%@spark_o.samplezn%><span>
                </div>
                <div id="measurement" class="element">
                    <span>Sn:<span><span class="fw-bold data"><%@spark_o.samplesn%><span>
                </div>
            </div>

            <div class="right">

                <div id="measurement" class="element">
                    <span>Cu:<span><span class="fw-bold data"><%@spark_o.samplecu%><span>
                </div>
                <div id="measurement" class="element">
                    <span>Ti:<span><span class="fw-bold data"><%@spark_o.sampleti%><span>
                </div>
                <div id="measurement" class="element">
                    <span>Al:<span><span class="fw-bold data"><%@spark_o.sampleal%><span>
                </div>
                <div id="measurement" class="element">
                    <span>Pb:<span><span class="fw-bold data"><%@spark_o.samplepb%><span>
                </div>
                <div id="measurement" class="element">
                    <span>Mg:<span><span class="fw-bold data"><%@spark_o.samplemg%><span>
                </div>

            </div>


        </div>





        <div id="testing-req-div">
            <div id="testing-req" class="element">
                <span>Testing Requirement:<span><span class="fw-bold data"><%@spark_o.more%><span>
            </div>
        </div>


        <div id="signatures-upper">
            <div id="signatures-upper-left-3d-pro" class="element">
                <div>
                    <span>Supervisor Name:</span>
                </div>
                <div>
                    <span class="fw-bold">Dr. Rizwanur Rahman</span>
                </div>
                <div id="debit-head">
                    <span class="text-muted element"><i><%@spark_o.debit%></i></span>
                </div>

                    <input id="student" type="textfield"/>
                <div>
                    <span>Supervisor Signature</span>
                </div>
            </div>

            <div id="signatures-upper-right-3d-pro" class="element">
                <div id="faculty-incharge">
                    <span>Faculty In-Charge:</span>
                </div>
                    <input id="student" type="textfield"/>
                <div>
                    <span class="fw-bold">Dr. Sumanth Govindarajan</span>
                </div>
                <div>
                    <span id="department"><b>(Dept. Of MME, NITK)</b></span>
                </div>
            </div>

        </div>





