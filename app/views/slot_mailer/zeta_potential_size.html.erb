<div id="margin">
    <div class="container-11">
          <div class="logo">
              <%= image_tag wicked_pdf_asset_base64("logoT.png"),style:"height:80px;"%>
          </div>
          <div class="crf-heading text-center">
              <h1 class="fw-bold" style="font-family: 'Montserrat', sans-serif;">Central Research Facility</h1>
              <h3>National Institute of Technology Karnataka, Surathkal </h3>
              <p><i>www.nitk.ac.in</i></p>
          </div>
      </div>

      <!-- equipment name -->
      <div class="equipment">
          <h2 class="text-center" id="equip-heading"><u>Zeta Potential & Particle Size Slot Form</u></h2>
      </div>

      <span id="app-no-tag">Application No:</span><span class="app-no fw-bold element data">CRF/ZETA/<%=@zeta_potential_size.id%></span>
      <div class = "user-info" >
        <div class="left">
            <div class="element">
                <span>Applicant Name:</span>
                <span class="fw-bold data"> <%= @user.firstname %> <%= @user.lastname %> </span>
            </div>
            <div class="element">
                <span>Applicant Email:</span>
                <span class="fw-bold data"> <%= @user.email %></span>
            </div>
            <div class="element">
                <span>Department:</span>
                <span class="fw-bold data"> <%= @user.department %></span>
            </div>
          </div>
          <div class = "right">
                <div class="element">

                    <span>Contact No:</span>
                    <span class="fw-bold data"> <%= @user.contact %></span>
                </div>

            <div class="element">
                <span>Course:</span>
                <span class="fw-bold data"> <%= @user.course %></span>
            </div>

          </div>
      </div>

        <p class="text-center" id="sample-details-heading"><u>Sample Details</u></p>
        <div id="sample-details">
            <div class="left">
                <div id="no-of-sample" class="element">
                    <span>No. of Samples:<span><span class="fw-bold data"><%=@zeta_potential_size.sample%><span>
                </div>
                <div id="sample-type" class="element">
                    <span>Sample Type:<span><span class="fw-bold data"><%=@zeta_potential_size.stype%><span>
                </div>

                <div id="measurement" class="element">
                    <span>Sample Toxicity:<span><span class="fw-bold data"><%=@zeta_potential_size.toxicity%><span>
                </div>
                <div id="compatibilty" class="element">
                    <span>Measurement Angle:<span><span class="fw-bold data"><%=@zeta_potential_size.angle%><span>
                </div>

            </div>

            <div class="right">

                <div id="laser-to-be-used:" class="element">
                    <span>Possible element:<span><span class="fw-bold data"><%=@zeta_potential_size.element%><span>
                </div>
                <div id="laser-to-be-used:" class="element">
                    <span>Analysis Type:<span><span class="fw-bold data"><%=@zeta_potential_size.analysis_type%><span>
                </div>
                <div id="laser-to-be-used:" class="element">
                    <span>Analysis Temperature:<span><span class="fw-bold data"><%=@zeta_potential_size.analysis_temperature%><span>
                </div>

            </div>



            </div>

        <p class="text-center" id="sample-details-heading"><u>Solvent & Solute Informatiopn</u></p>
        <div id="safety-info">
            <div class="left">
                <div id="measurement" class="element">
                    <span>Solvent Name:<span><span class="fw-bold data"><%=@zeta_potential_size.solvent%><span>
                </div>
                <div id="compatibilty" class="element">
                <div id="laser-to-be-used:" class="element">
                    <span>Viscosity at specific Temp.(Solvent):<span><span class="fw-bold data"><%=@zeta_potential_size.viscositypoise%>Poise<span>,<span class="fw-bold data"><%=@zeta_potential_size.viscositytemp%><span>
                </div>
                    <span>Refective Index (Solvent):<span><span class="fw-bold data">μ =<%=@zeta_potential_size.refractive_index%><span>
                </div>



            </div>

            <div class="right">

                <div id="compatibilty" class="element">
                    <span>Solute is known?:<span><span class="fw-bold data">Silver<%=@zeta_potential_size.soluteknown%><span>
                </div>
                <div id="compatibilty" class="element">
                    <span>Ref. index (solute):<span><span class="fw-bold data">μ =<%=@zeta_potential_size.refindex%><span>
                </div>
                <div id="compatibilty" class="element">
                    <span>Solute Abs.coefficent:<span><span class="fw-bold data">ε =<%=@zeta_potential_size.abscoefficent%><span>
                </div>

                </div>


            </div>



        <div id="testing-req-div">
            <div id="testing-req" class="element">
                <span>Testing Requirement:<span><span class="fw-bold data"><%=@zeta_potential_size.more%><span>
            </div>
        </div>


        <div id="signatures-upper">
            <div id="signatures-upper-left-3d-pro" class="element">
                <div>
                    <span>Supervisor Name:</span>
                </div>
                <div>
                    <span class="fw-bold">Dr. Rizwanur Rahman</span>
                </div>
                <div id="debit-head">
                    <span class="text-muted element"><i>><%@zeta_potential_size.debit%></i></span>
                </div>

                    <input id="student" type="textfield"/>
                <div>
                    <span>Supervisor Signature</span>
                </div>
            </div>

            <div id="signatures-upper-right-3d-pro" class="element">
                <div id="faculty-incharge">
                    <span>Faculty In-Charge:</span>
                </div>
                    <input id="student" type="textfield"/>
                <div>
                    <span class="fw-bold">Prof Arun M Isloor</span>
                </div>
                <div>
                    <span id="department"><b>(Dept. Of Chemistry, NITK)</b></span>
                </div>
            </div>

        </div>





