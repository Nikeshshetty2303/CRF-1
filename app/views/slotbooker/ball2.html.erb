<%# the content section is coded here %>
<div id="slots">
    <div id="current-tab">
        <h2 class="fw-bold font-unbounded" id="tab-name">All Slots</h2>
    </div>


    <div id="slot-details">
    <div>
        <table class="table table-hover font-quicksand">
            <thead>
                <tr class="table-head font-unbounded">
                    <th scope="col" id="application-no">Appl No</th>
                    <th scope="col" id="name">Name</th>
                    <th scope="col" id="institute">Institute</th>
                    <th scope="col" id="department">Department</th>
                    <th scope="col" id="contact-no">Contact No:</th>
                    <th scope="col" id="sample-no">No of Samples</th>
                    <th scope="col" id="sample-no">Specific Sample Type</th>
                    <th scope="col" id="feed-material">Feed Material</th>
                    <th scope="col" id="ball-mill-type">Ball Milling Type</th>
                    <th scope="col" id="grind-feed">Grind Feed Type</th>
                    <th scope="col" id="grain-size">Grain Size (<3mm)</th>
                    <th scope="col" id="grind-time"> Grinding Time</th>
                    <th scope="col" id="hardness">Hardness</th>
                    <th scope="col" id="speed">Speed (<2000)</th>
                    <th scope="col" id="toxicity">Toxicity</th>
                    <th scope="col" id="compatability">Compatability</th>
                    <th scope="col" id="request">More info</th>
                    <th scope="col" id="booked-on">Booked On</th>
                    <th scope="col" id="slot-date">Slot Date</th>
                    <th scope="col" id="slot-time">Slot Time</th>
                    <th scope="col">Status</th>
                    <th scope="col" id="reference-paper">Reference Paper</th>
                </tr>
            </thead>
            <tbody>

                  <% @ball2.all.each do |ball|%>
                  <tr>
                    <!-- Button trigger modal -->
                    <th scope="row">CRF/BALL/<%=ball.id %>	</th>
                    <td> <%= ball.user.name%> </td>
                    <td> <%= ball.user.orgname%> </td>
                    <td> <%= ball.user.department%> </td>
                    <td> <%= ball.user.contact%> </td>
                    <td> <%= ball.sample%> </td>
                    <td> <%= ball.specify%> </td>
                    <td> <%= ball.feed%> </td>
                    <td> <%= ball.btype%> </td>
                    <td> <%= ball.grind%> </td>
                    <td> <%= ball.grinding%> </td>
                    <td> <%= ball.hardness%> </td>
                    <td> <%= ball.speed%></td>
                    <td> <%= ball.toxicity%> </td>
                    <td> <%= ball.compatibility%>
                    <td> <%= ball.more%> </td>
                    <td>Booked</td>

                    <td> <%= ball.slotdate %></td>

                    <td> <%= ball.slottime %></td>

                      <td><%= ball.status%></td>
                    <%ball.references.each do |file|%>
                    <td> <%= link_to "Download", rails_blob_path(file, disposition: :attachment), class: "btn btn-primary" %></td>
                 <%end%>
                        <td id="assign-btn">
                           <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#reassign-diaolgue-box">
                            Reassign
                            </button>

                            <!-- Modal -->
                            <div class="modal fade" id="reassign-diaolgue-box" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="staticBackdropLabel">Confirm the Reassignment to <b>Preetham Naik</b></h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
...........................
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <button type="button" class="btn btn-primary">Reassign a Slot</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td id="cancel-btn">
                           <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#reassign-diaolgue-box">
                            Cancel
                            </button>

                            <!-- Modal -->
                            <div class="modal fade" id="reassign-diaolgue-box" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="staticBackdropLabel">Confirm the Reassignment to <b>Preetham Naik</b></h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">

                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <button type="button" class="btn btn-primary">Cancel Slot</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
<%end%>
                    </tr>

                </tbody>
            </table>

        </div>
        </div>


    </div>


</div>
