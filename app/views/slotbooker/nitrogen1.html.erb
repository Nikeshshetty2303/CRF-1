<%# the content section is coded here %>
<div id="slots">
    <div id="current-tab">
        <h2 class="fw-bold font-unbounded" id="tab-name">NITROGEN:All Slots</h2>
    </div>


    <div id="slot-details">
    <div>
        <table class="table table-hover font-quicksand">
            <thead>
                <tr class="table-head font-unbounded">
                    <th scope="col" id="application-no">Appl No</th>
                    <th scope="col" id="name">Name</th>
                    <th scope="col" id="institute">Institute</th>
                    <th scope="col" id="department">Department</th>
                    <th scope="col" id="contact-no">Contact No:</th>
                    <th scope="col" id="sample-no">Quantity</th>
                    <th scope="col" id="composition">Purpose</th>
                    <th scope="col" id="request">More info</th>
                    <th scope="col" id="booked-on">Booked On</th>
                    <th scope="col" id="slot-date">Slot Date</th>
                    <th scope="col" id="slot-time">Slot Time</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody>

                    <% @nitrogen1.where(status:'pending').each do |xrds|%>
                  <tr>
                    <!-- Button trigger modal -->
                    <th scope="row">CRF/NITROGEN/<%=xrds.id %>	</th>
                    <td> <%= xrds.user.name%> </td>
                    <td> <%= xrds.user.orgname%> </td>
                    <td> <%= xrds.user.department%> </td>
                    <td> <%= xrds.user.contact%> </td>
                    <td> <%= xrds.quantity%> </td>
                    <td> <%= xrds.purpose%> </td>
                    <td> <%= xrds.more%> </td>
                    <td>Booked</td>

                    <td> <%= xrds.slotdate %></td>

                    <td> <%= xrds.slottime %></td>

                      <td><%= xrds.status%></td>


                      <td id="assign-btn">
                          <!-- Button trigger modal -->
                           <%= button_tag "Assign", type: "button", class: "btn btn-primary", data: { bs_toggle: "modal", bs_target:"##{xrds.id}" }, id: "ani" %>
                           <div id="<%= xrds.id%>" class="modal">

 <div class="modal-dialog">
           <div class="modal-content">
               <div class="modal-header">
                   <h1 class="modal-title fs-5" id="staticBackdropLabel">Confirm the Reassignment to <b><%= xrds.user.name %></b></h1>
                   <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
               </div>
               <div class="modal-body">
                 <%= form_with(model: xrds,local:true) do |form| %>

                     <div class="input-group mb-3">
                     <%= form.label :slotdate, "Slot Date", class:"input-group-text"%>
                     <%= form.date_field :slotdate, class:"form-control", id:"composition"%>
                   </div>

                   <div class="input-group mb-3">
                   <%= form.label :slottime, "Slot Time", class:"input-group-text"%>
                   <%= form.time_field :slottime, class:"form-control", id:"composition"%>
                 </div>
                  <%=xrds.id%>

                   <div class="actions">
                     <%= form.submit "Allot", class:"btn btn-primary", id:"sbt" %>

                   </div>
                 <% end %>
               </div>
               <div class="modal-footer">
                   <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                   <button type="button" class="btn btn-primary">Cancel Slot</button>
               </div>
           </div>
       </div>

</div>

                       </td>

                   </tr>
<%end%>
               </tbody>
           </table>

       </div>
       </div>


   </div>


</div>
