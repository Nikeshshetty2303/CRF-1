<div id="header">
    <nav class="navbar bg-dark navbar-expand-lg navbar-dark">
        <a class="navbar-brand" id="title" href="#content">CRF ADMIN</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#btn-head">
        <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="btn-head">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item" id="admin-mail">
                    <a class="nav-link" href="#">admin@mail</a>
                </li>
                <li class="nav-item" id="logout">
                <%= link_to 'LogOut',destroy_user_session_path,method: :delete ,class:"btn btn-danger"%>
                </li>
            </ul>
        </div>
    </nav>
</div>

<div class="container-slot-booker">

    <div id="navigation" class="font-quiucksand">
        <!--below is the button of Nitk CRF logo-->
        <div id="navigation-logo">
          <a href="#"> <%=image_tag 'logoT', id:"logopic", class:"btn btn-left" %> </a>
        </div>

        <div class="sidelinks">

            <h2 class="fw-bold text-center">Navigation</h2>
            <ul class="sidelinks-model-list">
                <%# below are code to get items on the navigation pane %>
                <li class="nav-item">
                        <%= link_to 'All Slots',slotbooker_nitrogen_path,class:"nav-link active sidelink-wrap" %>
                </li>
                <li class="nav-item">
                        <%= link_to 'Pending Slots',slotbooker_nitrogen1_path,class:"nav-link active sidelink-wrap" %>
                        </li>
                <li class="nav-item">
                        <%= link_to 'Alloted Slots',slotbooker_nitrogen2_path,class:"nav-link active sidelink-wrap",id:"active-tab" %>
                        </li>
                <li class="nav-item">
                        <%= link_to 'Completed Slots',slotbooker_nitrogen3_path,class:"nav-link active sidelink-wrap" %>
                        </li>
                <li class="nav-item">
                      <%= link_to 'Cancelled Slots',slotbooker_nitrogen4_path,class:"nav-link active sidelink-wrap" %>
                </li>
            </ul>
        </div>
    </div>

<%# the content section is coded here %>
<div id="slots">
    <div id="current-tab">
        <h2 class="fw-bold font-unbounded" id="tab-name">NITROGEN:All Slots</h2>
    </div>


    <div id="slot-details">
    <div>
        <table class="table table-hover font-quicksand">
            <thead>
                <tr class="table-head font-unbounded">
                    <th scope="col" id="application-no">Appl No</th>
                    <th scope="col" id="name">Name</th>
                    <th scope="col" id="institute">Institute</th>
                    <th scope="col" id="department">Department</th>
                    <th scope="col" id="contact-no">Contact No:</th>
                    <th scope="col" id="sample-no">Quantity</th>
                    <th scope="col" id="composition">Purpose</th>
                    <th scope="col" id="request">More info</th>
                    <th scope="col" id="booked-on">Booked On</th>
                    <th scope="col" id="slot-date">Slot Date</th>
                    <th scope="col" id="slot-time">Slot Time</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody>

                  <% @nitrogen2.where(status:'alloted').each do |nitrogens|%>
                  <tr>
                    <!-- Button trigger modal -->
                    <th scope="row">CRF/NITROGEN/<%=nitrogens.id %>	</th>
                    <td> <%= nitrogens.user.name%> </td>
                    <td> <%= nitrogens.user.orgname%> </td>
                    <td> <%= nitrogens.user.department%> </td>
                    <td> <%= nitrogens.user.contact%> </td>
                    <td> <%= nitrogens.quantity%> </td>
                    <td> <%= nitrogens.purpose%> </td>
                    <td> <%= nitrogens.more%> </td>
                    <td>Booked</td>

                    <td> <%= nitrogens.slotdate %></td>

                    <td> <%= nitrogens.slottime %></td>

                      <td><%= nitrogens.status%></td>
                
                  <%end%>
                  <td id="assign-btn">
                      <!-- Button trigger modal -->
                       <%= button_tag "Reassign", type: "button", class: "btn btn-primary", data: { bs_toggle: "modal", bs_target:"##{xrds.id}" }, id: "ani" %>
                       <div id="<%= xrds.id%>" class="modal">

                     <div class="modal-dialog">
                         <div class="modal-content">
                             <div class="modal-header">
                                 <h1 class="modal-title fs-5" id="staticBackdropLabel">Confirm the Reassignment to <b><%= xrds.user.name %></b></h1>
                                 <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                             </div>
                             <div class="modal-body">
                               <%= form_with(model: xrds,local:true) do |form| %>

                                   <div class="input-group mb-3">
                                   <%= form.label :slotdate, "Slot Date", class:"input-group-text"%>
                                   <%= form.date_field :slotdate, class:"form-control", id:"composition"%>
                                 </div>

                                 <div class="input-group mb-3">
                                 <%= form.label :slottime, "Slot Time", class:"input-group-text"%>
                                 <%= form.time_field :slottime, class:"form-control", id:"composition"%>
                               </div>
                                <%=xrds.id%>

                                 <div class="actions">
                                   <%= form.submit "Allot", class:"btn btn-primary", id:"sbt" %>

                                 </div>
                               <% end %>
                             </div>
                             <div class="modal-footer">
                                 <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                 <button type="button" class="btn btn-primary">Cancel Slot</button>
                             </div>
                         </div>
                     </div>
                 </div>
                   </td>


                   <td id="cancel-btn">
                      <!-- Button trigger modal -->
                        <%= button_tag "Cancel", type: "button", class: "btn btn-primary", data: { bs_toggle: "modal", bs_target:"#ani#{xrds.id}" }, id: "anish" %>

                       <!-- Modal -->
                        <div id="ani<%= xrds.id%>" class="modal">
                         <div class="modal-dialog">
                               <div class="modal-content">
                                   <div class="modal-header">
                                       <h1 class="modal-title fs-5" id="staticBackdropLabel">Cancel the slot <b><%= xrds.user.name %></b></h1>
                                       <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                   </div>
                                   <div class="modal-body">
                                     <%= form_for xrds do |f| %>
                                       <p> Are you sure you want to cancel the slot ?</p>
                                       <%= f.hidden_field :status, value: 'cancelled' %>
                                   <div class="actions">


                                   </div>

                                    </div>
                                   <div class="modal-footer">
                                       <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                         <%= f.submit "Cancelled", class:"btn btn-primary", id:"sbt" %>
                                   </div>
                                   <% end %>
                               </div>
                           </div>
                       </div>
                   </td>

<%end%>
              </tr>

          </tbody>
      </table>

  </div>
  </div>


</div>


</div>
<script>
// Get the modals and buttons
var modal1 = document.getElementByClass("modal");
var btn1 = document.getElementById("ani");
var modal2 = document.getElementByClass("modal2");
var btn2 = document.getElementById("anish");
// Add event listeners to the buttons
btn1.addEventListener("click", function() {
modal1.style.display = "block";
});

btn2.addEventListener("click", function() {
modal2.style.display = "block";
});

// Close the modal when the user clicks anywhere outside of it
window.addEventListener("click", function(event) {
if (event.target == modal1) {
modal1.style.display = "none";
}
if (event.target == modal2) {
modal2.style.display = "none";
}
});
</script>
