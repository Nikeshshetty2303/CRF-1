<%= stylesheet_link_tag "adminportal" %>

<div id="header">
    <nav class="navbar bg-dark navbar-expand-lg navbar-dark">
        <a class="navbar-brand" id="title" href="#content">CRF ADMIN</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#btn-head">
        <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="btn-head">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item" id="admin-mail">
                    <a class="nav-link" href="#">admin@mail</a>
                </li>
                <li class="nav-item" id="logout">
                <%= link_to 'LogOut',destroy_user_session_path,method: :delete ,class:"btn btn-danger"%>
                </li>
            </ul>
        </div>
    </nav>
</div>

<div class="container-slot-booker">

    <div id="navigation" class="font-quiucksand">
        <!--below is the button of Nitk CRF logo-->
        <div id="navigation-logo">
          <a href="#"> <%=image_tag 'logoT', id:"logopic", class:"btn btn-left" %> </a>
        </div>

        <div class="sidelinks">

            <h2 class="fw-bold text-center">Navigation</h2>
            <ul class="sidelinks-model-list">
                <%# below are code to get items on the navigation pane %>
                <li class="nav-item">
                        <%= link_to 'All Slots',slotbooker_nitrogen_path,class:"nav-link active sidelink-wrap" %>
                </li>
                <li class="nav-item">
                        <%= link_to 'Pending Slots',slotbooker_nitrogen1_path,class:"nav-link active sidelink-wrap" %>
                        </li>
                <li class="nav-item">
                        <%= link_to 'Alloted Slots',slotbooker_nitrogen2_path,class:"nav-link active sidelink-wrap" %>
                        </li>
                <li class="nav-item">
                        <%= link_to 'Completed Slots',slotbooker_nitrogen3_path,class:"nav-link active sidelink-wrap",id:"active-tab" %>
                        </li>
                <li class="nav-item">
                      <%= link_to 'Cancelled Slots',slotbooker_nitrogen4_path,class:"nav-link active sidelink-wrap" %>
                </li>
            </ul>
        </div>
    </div>

<%# the content section is coded here %>
<div id="slots">
    <div id="current-tab">
        <h2 class="fw-bold font-unbounded" id="tab-name">NITROGEN: Completed Slots</h2>
    </div>


    <div id="slot-details">
    <div>
        <table class="table table-hover font-quicksand">
            <thead>
                <tr class="table-head font-unbounded">
                    <th scope="col" id="application-no">Appl No</th>
                    <th scope="col" id="name">Name</th>
                    <th scope="col" id="institute">Institute</th>
                    <th scope="col" id="department">Department</th>
                    <th scope="col" id="contact-no">Contact No:</th>
                    <th scope="col" id="sample-no">Quantity</th>
                    <th scope="col" id="composition">Purpose</th>
                    <th scope="col" id="request">More info</th>
                    <th scope="col" id="booked-on">Booked On</th>
                    <th scope="col" id="slot-date">Slot Date</th>
                    <th scope="col" id="slot-time">Slot Time</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody>

                  <% @nitrogen3.where(status:'completed').each do |nitrogen|%>
                  <tr>
                    <!-- Button trigger modal -->
                    <th scope="row">CRF/NITROGEN/<%=nitrogen.id %>	</th>
                    <td> <%= nitrogen.user.name%> </td>
                    <td> <%= nitrogen.user.orgname%> </td>
                    <td> <%= nitrogen.user.department%> </td>
                    <td> <%= nitrogen.user.contact%> </td>
                    <td> <%= nitrogen.quantity%> </td>
                    <td> <%= nitrogen.purpose%> </td>
                    <td> <%= nitrogen.more%> </td>
                    <td>Booked</td>

                    <td> <%= nitrogen.slotdate %></td>

                    <td> <%= nitrogen.slottime %></td>

                      <td><%= nitrogen.status%></td>
                </tr>
                  <%end%>

                </tbody>
            </table>

        </div>
        </div>


    </div>


</div>
