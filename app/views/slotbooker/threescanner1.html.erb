<div class="container-slot-booker">

    <div id="navigation" class="font-quiucksand">
        <!--below is the button of Nitk CRF logo-->
        <div id="navigation-logo">
          <a href="#"> <%=image_tag 'logoT', id:"logopic", class:"btn btn-left" %> </a>
        </div>

        <div class="sidelinks">

            <h2 class="fw-bold text-center">Navigation</h2>
            <ul class="sidelinks-model-list">
                <%# below are code to get items on the navigation pane %>
                <li class="nav-item">
                        <%= link_to 'All Slots',slotbooker_threescanner_path,class:"nav-link active sidelink-wrap" %>
                </li>
                <li class="nav-item">
                        <%= link_to 'Pending Slots',slotbooker_threescanner1_path,class:"nav-link active sidelink-wrap",id:"active-tab" %>
                        </li>
                <li class="nav-item">
                        <%= link_to 'Alloted Slots',slotbooker_threescanner2_path,class:"nav-link active sidelink-wrap" %>
                        </li>
                <li class="nav-item">
                        <%= link_to 'Completed Slots',slotbooker_threescanner3_path,class:"nav-link active sidelink-wrap" %>
                        </li>
                <li class="nav-item">
                      <%= link_to 'Cancelled Slots',slotbooker_threescanner4_path,class:"nav-link active sidelink-wrap" %>
                </li>
            </ul>
        </div>
    </div>

<%# the content section is coded here %>
    <div id="slots">
        <div id="current-tab">
            <h2 class="fw-bold font-unbounded" id="tab-name">THREESCAN:Pending Slots</h2>
        </div>


        <div id="slot-details">
        <div>
            <table class="table table-hover font-quicksand">
                <thead>
                    <tr class="table-head font-unbounded">
                        <th scope="col" id="application-no">Appl No</th>
                        <th scope="col" id="name">Name</th>
                        <th scope="col" id="institute">Institute</th>
                        <th scope="col" id="department">Department</th>
                        <th scope="col" id="contact-no">Contact No:</th>
                        <th scope="col" id="sample-no">No of Samples</th>
                        <th scope="col" id="composition">Size</th>
                        <th scope="col" id="composition">Texture</th>
                        <th scope="col" id="phase">Final Output Required</th>
                        <th scope="col" id="request">More info</th>
                        <th scope="col" id="booked-on">Booked On</th>
                        <th scope="col" id="slot-date">Slot Date</th>
                        <th scope="col" id="slot-time">Slot Time</th>
                        <th scope="col">Status</th>
                        <th scope="col" id="reference-paper">Reference Paper</th>
                        <th scope="col" id="assign-col">Asssign</th>
                    </tr>
                </thead>
                <tbody>

                      <% @threescan1.where(status:'pending').each do |threes|%>
                      <tr>


                        <th scope="row">CRF/THREESCAN/<%=threes.id %>	</th>
                        <td> <%= threes.user.name%> </td>
                        <td> <%= threes.user.orgname%> </td>
                        <td> <%= threes.user.department%> </td>
                        <td> <%= threes.user.contact%> </td>
                        <td> <%= threes.sample%> </td>
                        <td> <%= threes.size%> </td>
                        <td> <%= threes.texture%></td>
                        <td>  Stl:<nobr><%= threes.stt%> <br>
                          Ply:<%= threes.ply%><br>
                          Wrl:<%= threes.wrl%> <br>
                          Obj: <%= threes.obj%> <br>
                          Asc: <%= threes.asc%> <br>
                          Aop: <%= threes.aop%> <br>
                          Ptx: <%= threes.ptx%> <br>
                          Xyzrgb: <%= threes.xyzrgb%>
                        </td>
                        <td> <%= threes.more%> </td>
                        <td>Booked</td>
                        <td><%= threes.slotdate %></td>
                        <td><%= threes.slottime %></td>

                        <td> <%= threes.status %></td>
                        <%if threes.references.attached? %>
                      <td><%threes.references.each do |file|%>
                         <%= link_to "Download", rails_blob_path(file, disposition: :attachment), class: "btn btn-primary" %>
                           <% end %></td>
                      <% else %>
                        <td>NA</td>
                      <% end %>
                      <td id="assign-btn">
                          <!-- Button trigger modal -->
                           <%= button_tag "Assign", type: "button", class: "btn btn-primary", data: { bs_toggle: "modal", bs_target:"##{threes.id}" }, id: "ani" %>
                           <div id="<%= threes.id%>" class="modal">

                           <div class="modal-dialog">
                                 <div class="modal-content">
                                     <div class="modal-header">
                                         <h1 class="modal-title fs-5" id="staticBackdropLabel">Confirm the Assignment to <b><%= threes.user.name %></b></h1>
                                         <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                      </div>
                                       <div class="modal-body">
                                         <%= form_with(model: threes,local:true) do |form| %>

                                             <div class="input-group mb-3">
                                             <%= form.label :slotdate, "Slot Date", class:"input-group-text"%>
                                             <%= form.date_field :slotdate, class:"form-control", id:"composition"%>
                                           </div>

                                           <div class="input-group mb-3">
                                           <%= form.label :slottime, "Slot Time", class:"input-group-text"%>
                                           <%= form.time_field :slottime, class:"form-control", id:"composition"%>
                                         </div>

                                          <%=form.fields_for :equipment_table do |f| %>
                                           <div class="input-group mb-3">
                                              <%= f.hidden_field :app_no, value:"CRF/XRD/#{threes.id}"%>
                                            </div>

                                           <div class="input-group mb-3">
                                             <%= f.hidden_field :username, value:"#{threes.user.name}"%>
                                          </div>


                                           <div class="input-group mb-3">
                                             <%= f.hidden_field :dummy, value:"alloted"%>
                                           </div>

                                          <div class="input-group mb-3">
                                            <%= f.hidden_field :debit_head, value:"#{threes.debit}" %>
                                         </div>

                                         <div class="input-group mb-3">
                                           <%= f.hidden_field :dept, value:"#{threes.user.department}" %>
                                        </div>

                                        <div class="input-group mb-3">
                                          <%= f.hidden_field :email, value:"#{threes.user.email}" %>
                                       </div>

                                        <div class="input-group mb-3">
                                          <%= f.hidden_field :equipname, value:"threes" %>
                                       </div>

                                          <%end%>

                                           <div class="actions">
                                             <%= form.submit "Allot", class:"btn btn-primary", id:"sbt" %>
                                           </div>
                                         <% end %>
                                       </div>
                                   </div>
                               </div>

                         </div>

                                               </td>

                                           </tr>
                         <%end%>

                                       </tbody>
                                   </table>

                               </div>
                               </div>


                           </div>


                         </div>
                         <script>
                         // Get the modals and buttons
                         var modal1 = document.getElementByClass("modal");
                         var btn1 = document.getElementById("ani");

                         // Add event listeners to the buttons
                         btn1.addEventListener("click", function() {
                           modal1.style.display = "block";
                         });

                         btn2.addEventListener("click", function() {
                           modal2.style.display = "block";
                         });

                         // Close the modal when the user clicks anywhere outside of it
                         window.addEventListener("click", function(event) {
                           if (event.target == modal1) {
                             modal1.style.display = "none";
                           }
                           if (event.target == modal2) {
                             modal2.style.display = "none";
                           }
                         });
                         </script>
